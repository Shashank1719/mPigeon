<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9E2B24E8"
    tools:context=".Settings"


    >

    <ImageView
        android:id="@+id/back_arrow_settings"
        android:layout_width="40dp"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        app:srcCompat="@drawable/back_arrow_settings"
        app:tint="#FFFFFF"
        android:contentDescription="@string/back_arrow_settings" />

    <LinearLayout
        android:id="@+id/user_detail_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/back_arrow_settings"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"

        android:gravity="center"
        android:orientation="vertical">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/user_profile_image_settings"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            app:srcCompat="@drawable/user" />

        <ImageView
            android:id="@+id/plus_settings"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="-28dp"
            app:srcCompat="@drawable/plus"
            android:contentDescription="@string/set_image_settings" />

        <LinearLayout
            android:id="@+id/user_detail_linear_layout_horizontal_settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/userName_settings"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="5dp"
                android:text="@string/user_name_settings"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/userName_editText_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:ems="10"
                android:hint="@string/enter_your_name"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_detail_linear_layout2_horizontal_settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/about_user_settings"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="5dp"
                android:text="@string/about"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/about_editText_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:ems="10"
                android:hint="@string/enter_your_status"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textStyle="normal" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/saveBtn_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="13dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_bg_settings"
            android:padding="5dp"
            android:text="@string/save"
            android:textColor="#002AFF" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_linear_layout_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/linear_bg_seetings"
        android:orientation="vertical"
        android:padding="40dp">

        <TextView
            android:id="@+id/privacy_policy_settings"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/privacy_policy"
            android:drawablePadding="15dp"
            android:padding="10dp"
            android:text="Privacy Policy"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/about_us_settings"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/info"
            android:drawablePadding="15dp"
            android:padding="10dp"
            android:text="About Us"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:drawableTint="@color/purple_700" />

        <TextView
            android:id="@+id/invite_settings"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/add_friend"
            android:drawablePadding="15dp"
            android:padding="10dp"
            android:text="Invite Your Friends"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:drawableTint="@color/purple_700" />

        <TextView
            android:id="@+id/notification_settings"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/notification"
            android:drawablePadding="15dp"
            android:padding="10dp"
            android:text="Notifications"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:drawableTint="@color/purple_700" />

        <TextView
            android:id="@+id/help_settings"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/customer_support"
            android:drawablePadding="15dp"
            android:padding="10dp"
            android:text="Help"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:drawableTint="@color/purple_700" />
    </LinearLayout>
</RelativeLayout>